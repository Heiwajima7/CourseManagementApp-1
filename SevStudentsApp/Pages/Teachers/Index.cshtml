@page
@model CourseManagementApp.Pages.Teachers.IndexModel
@{
    ViewData["Title"] = "Teachers";
}

<h2 class="text-center pt-4 pb-2">List of Teachers</h2>
<div class="row justify-content-center">
    <table id="sortMe" class="table table-striped table-hover w-auto">
        <thead>
            <tr>
                <th id="cursor" data-type="number"><i class="fa-solid fa-sort"></i>  ID</th>
                <th id="cursor" data-type="text"><i class="fa-solid fa-sort"></i>  Firstname</th>
                <th id="cursor" data-type="text"><i class="fa-solid fa-sort"></i>  Lastname</th>
                <th data-type="number">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.teachers is not null){
                @foreach (var teacher in Model.teachers)
                {
                    <tr>
                        <td>@teacher.Id</td>
                        <td>@teacher.Firstname</td>
                        <td>@teacher.Lastname</td>
                        <td>
                            <a class="btn btn-danger btn-sm" href="/Teachers/Update?id=@teacher.Id">Edit/Info</a> 
                            <a class="btn btn-danger btn-sm" href="/Teachers/Delete?id=@teacher.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>