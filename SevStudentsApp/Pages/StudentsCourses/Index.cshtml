@page
@model CourseManagementApp.Pages.StudentsCourses.IndexModel
@{
    ViewData["Title"] = "Students-Courses";
    int i = 0;
}
<h2 class="text-center pt-4 pb-2">List of Student Assignments</h2>

<div class="row justify-content-center">
    <table id="sortMe" class="table table-striped table-hover w-auto">
        <thead>
            <tr>
                <th id="cursor" data-type="text"><i class="fa-solid fa-sort">  #  </th>
                <th id="cursor" data-type="text"><i class="fa-solid fa-sort"></i>  Student</th>
                <th id="cursor" data-type="text"><i class="fa-solid fa-sort"></i>  Course</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.studentsCourses is not null)
            {
                @foreach (var studentCourse in Model.studentsCourses)
                {
                    @foreach (var student in Model.students)
                    {
                        @foreach (var course in Model.courses)
                        {
                            if (@student.Id == studentCourse.StudentId && @course.Id == studentCourse.CourseId)
                            {
                                i++;
                                <tr>
                                    <td>@i</td>
                                    <td>@student.Lastname @student.Firstname</td>
                                    <td>@course.Description</td>
                                    <td><a class="btn btn-danger btn-sm" href="/StudentsCourses/Delete?studentId=@studentCourse.StudentId&courseId=@studentCourse.CourseId">Delete</a></td>
                                </tr>
                            }
                        }
                    }
                }
            }
        </tbody>
    </table>
</div>