@page
@model CourseManagementApp.Pages.Students.CreateModel
@{
    ViewData["Title"] = "Create Student";
}
<div class="container border rounded shadow bg-light my-3 py-3">

    <h2 class="text-center">New Student</h2>
    @if (!Model.errormessage.Equals("")){
        <h5><strong>@Model.errormessage</strong></h5>
    }

    <form method="post">
        <div class="row mb-3">
            <label for="firstname" class="col-md-1 col-form-label">Firstname</label>
            <div>
                <input type="text" class="form-control" name="firstname" id="firstname" placeholder="Enter firstname" value="@Model.studentDTO.Firstname" />
            </div>
        </div>
        <div class="row mb-3">
            <label for="lastname" class="col-md-1 col-form-label">Lastname</label>
            <div>
                <input type="text" class="form-control" name="lastname" id="lastname" placeholder="Enter lastname" value="@Model.studentDTO.Lastname"/>
            </div>
        </div>
        <div class=" col-sm-12 text-center">
            <button type="submit" class="btn col-md-2 btn-danger">Submit</button>
            <a href="/Students/Index" role="button" class="btn offset-md-7 col-md-2 btn-danger">Cancel</a>
        </div>
    </form>
</div>