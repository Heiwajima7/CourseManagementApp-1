@page
@model CourseManagementApp.Pages.Students.IndexModel
@{
    ViewData["Title"] = "Students";
}

<h2 class="text-center pt-4 pb-2">List of Students</h2>

<div class="row justify-content-center">
    <table id="sortMe" class="table table-striped table-hover w-auto">
        <thead>
            <tr>
                <th id="cursor" data-type="number"><i class="fa-solid fa-sort"></i>  ID</th>
                <th id="cursor" data-type="text"><i class="fa-solid fa-sort"></i>  Firstname</th>
                <th id="cursor" data-type="text"><i class="fa-solid fa-sort"></i>  Lastname</th>
                <th id="cursor" data-type="number">  Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.students is not null){
                @foreach (var student in Model.students)
                {
                    <tr>
                        <td>@student.Id</td>
                        <td>@student.Firstname</td>
                        <td>@student.Lastname</td>
                        <td>
                            <a class="btn btn-danger btn-sm" href="/Students/Update?id=@student.Id">Edit/Info</a>
                            <a class="btn btn-danger btn-sm" href="/Students/Delete?id=@student.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>